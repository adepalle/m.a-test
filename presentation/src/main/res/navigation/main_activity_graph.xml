<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_graph.xml"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="fr.adepalle.ma_test.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_todoFragment"
            app:destination="@id/todoFragment">
            <argument
                android:name="bundleTodoUserId"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/todoFragment"
        android:name="fr.adepalle.ma_test.ui.detail.TodoFragment"
        android:label="TodoFragment"
        tools:layout="@layout/fragment_detail" />

</navigation>